    <!-- Hibernate configuration -->  
    <import resource="classpath:spring_config/spring_dataSource.xml"/>
    <import resource="classpath:spring_config/spring_sessionFactory.xml"/>
    <import resource="classpath:spring_config/spring_model_user.xml"/>
    <import resource="classpath:spring_config/spring_aop.xml"/>
    <!-- 定义Spring JDBC模板类bean -->
    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
